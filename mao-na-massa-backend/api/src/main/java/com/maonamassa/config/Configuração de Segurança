
import org.springframework.context.annotation.Configuration;
import org.springframework.web.servlet.config.annotation.CorsRegistry;
import org.springframework.web.servlet.config.annotation.WebMvcConfigurer;

@Configuration
public class WebConfig implements WebMvcConfigurer {

    /**
     * Configura o CORS (Cross-Origin Resource Sharing) para a aplicação.
     * Isso é essencial para permitir que o Front-end (ex: rodando em
     * http://127.0.0.1:5500 ou file://)
     * possa fazer chamadas de API para o Back-end (rodando em
     * http://localhost:8080).
     */
    @Override
    public void addCorsMappings(CorsRegistry registry) {
        registry.addMapping("/api/v1/**") // Libera apenas os endpoints da nossa API v1
                .allowedOrigins("*") // Permite requisições de QUALQUER origem (para desenvolvimento)
                .allowedMethods("GET", "POST", "PUT", "DELETE", "OPTIONS") // Métodos permitidos
                .allowedHeaders("*"); // Permite todos os cabeçalhos
    }
}